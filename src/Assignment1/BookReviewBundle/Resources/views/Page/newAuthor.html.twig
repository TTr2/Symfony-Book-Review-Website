{% extends 'BookReviewBundle::layout.html.twig' %}

{% block title %} Add an Author{% endblock %}
{% block imageColumn %}
    <img src="{{ asset('bundles/BookReviewBundle/assets/author_images/blank_author_image.png')}}" alt="No Image Available" width="250" height="250">
    <p></p>
    <p class="disclaimer" style="font-style: italic">Your help is appreciated! We are a community run site so we rely on the active contribution of users, but please strive for truth and accuracy.</p>
{% endblock %}
{% block details %}
    <header>
        <h1>Add an Author to the Library</h1>
    </header>
    <p>To add an author to "Read Together", enter their details in the fields below. For best results, select a square author image (250x250 pixels) then select "Confirm".</p>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}
{% endblock %}

